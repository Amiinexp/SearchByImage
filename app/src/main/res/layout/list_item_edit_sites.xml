<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_header"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="bottom"
        android:text="New Text"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingRight="0dp"
        android:paddingLeft="16dp">

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_open_in_new_24dp"
            android:padding="4dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:layout_toEndOf="@+id/item_icon"
            android:layout_toRightOf="@+id/item_icon"
            android:orientation="vertical"
            android:paddingRight="56dp">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="New Text"
                android:textAppearance="@style/Preference_TextAppearanceMaterialBody2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_url"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="New Text"
                android:textSize="14sp" />
        </LinearLayout>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_site_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp" />
    </RelativeLayout>

    <View
        android:id="@+id/fake_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="64dp"
        android:background="@color/dividerSearchEngineList" />

</LinearLayout>